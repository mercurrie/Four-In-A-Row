import numpy as np
import pygame

ROW_COUNT = 6
COL_COUNT = 7


#create game board
def playBoard():
    board = np.zeros((ROW_COUNT,COL_COUNT))
    return board
#drops a game piece in row/column
def dropPiece(board, row, col, piece):
    board[row][col] = piece

#checks if column isn't full
def isValid(board,col):
    return board[ROW_COUNT - 1][col] == 0

#check if row has an epty space
def getOpenRow(board, col):
    for r in range(ROW_COUNT):
        if board[r][col] == 0:
            return r
#prints upated board to screen
def printBoard(board):
    print(np.flip(board,0))

def winCon(board, piece):
    # Check horizontal locations for win
	for c in range(COL_COUNT-3):
		for r in range(ROW_COUNT):
			if board[r][c] == piece and board[r][c+1] == piece and board[r][c+2] == piece and board[r][c+3] == piece:
				return True

	# Check vertical locations for win
	for c in range(COL_COUNT):
		for r in range(ROW_COUNT-3):
			if board[r][c] == piece and board[r+1][c] == piece and board[r+2][c] == piece and board[r+3][c] == piece:
				return True

	# Check positively sloped diaganols
	for c in range(COL_COUNT-3):
		for r in range(ROW_COUNT-3):
			if board[r][c] == piece and board[r+1][c+1] == piece and board[r+2][c+2] == piece and board[r+3][c+3] == piece:
				return True

	# Check negatively sloped diaganols
	for c in range(COL_COUNT-3):
		for r in range(3, ROW_COUNT):
			if board[r][c] == piece and board[r-1][c+1] == piece and board[r-2][c+2] == piece and board[r-3][c+3] == piece:
				return True




board = playBoard()
game_over = False
turn = 0

pygame.init()


while not game_over:
    #Ask for player 1 input
    if turn == 0:
        col = int(input("Player 1 Make a Selection (0-6): "))

        if isValid(board,col):
            row = getOpenRow(board, col)
            dropPiece(board, row, col, 1)

            if winCon(board, 1):
                 print("PLAYER 1 WINS")
                 game_over = True

    #Ask for player 2 input
    else:
        col = int(input("Player 2 Make a Selection (0-6): "))

        if isValid(board,col):
            row = getOpenRow(board, col)
            dropPiece(board, row, col, 2)

            if winCon(board, 2):
                print("PLAYER 2 WINS")
                game_over = True

    printBoard()
    turn +=1
    turn = turn % 2
